<Page
    x:Class="Jaar_1_Project_4.TeacherLogIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="mainHeadtitle" TargetType="TextBlock"/>
    </Page.Resources>

    <Grid x:ConnectionId='1' Background="{StaticResource hrTheme}" x:Name="teacher_login">
        <TextBlock x:ConnectionId='2' x:Name="mainTeacherText" HorizontalAlignment="Left" Margin="135,0,0,0" TextWrapping="Wrap" Text="Teacher" VerticalAlignment="Top" Style="{StaticResource mainTitle}" Foreground="White" FontWeight="Bold" FontSize="24"/>
        <TextBlock x:ConnectionId='3' x:Name="usernameLoginText" HorizontalAlignment="Left" Height="14" Margin="156,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" FontSize="11">
            <Run Text="Username                  "/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <TextBlock x:ConnectionId='4' x:Name="passwordLoginText" HorizontalAlignment="Left" Margin="155,90,0,0" TextWrapping="Wrap" Text="Teacher code" VerticalAlignment="Top" FontSize="11"/>
        <TextBox x:ConnectionId='5' x:Name="UsernameTypeBox" HorizontalAlignment="Left" Margin="131,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="6" Width="109" FontSize="7"/>
        <Button x:ConnectionId='6' x:Name="logInButton" Content="Log in" HorizontalAlignment="Left" Margin="130,140,0,0" VerticalAlignment="Top"                           FontSize="11" Width="110" />
        <Button x:ConnectionId='7' x:Name="studentLoginBackButton" Content="Back                 " HorizontalAlignment="Left" Margin="130,175,0,0" VerticalAlignment="Top" Width="110" Height="25"                                      FontSize="11"/>
        <PasswordBox x:ConnectionId='8' x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="131,105,0,0" Width="109"/>

    </Grid>
</Page>

