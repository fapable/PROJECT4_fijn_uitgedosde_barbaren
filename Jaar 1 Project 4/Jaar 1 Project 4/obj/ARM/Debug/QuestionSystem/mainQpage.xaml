<Page
    x:Class="Jaar_1_Project_4.QuestionSystem.mainQpage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4.QuestionSystem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="QuestionMenu" Background="{ThemeResource hrTheme}">
        <TextBlock x:ConnectionId='2' x:Name="title" HorizontalAlignment="Center" Margin="126,10,107,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="35" Foreground="#FFFFF8F8">
            <Run Text="Q and A"/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <Button x:ConnectionId='3' x:Name="AskAQuestionButton" Content="Ask a question" HorizontalAlignment="Center" Margin="63,126,52,0" VerticalAlignment="Top" Width="245" Height="65"                     />
        <Button x:ConnectionId='4' x:Name="viewQuestionsButton" Content="View questions" HorizontalAlignment="Center" Margin="63,249,52,0" VerticalAlignment="Top" Width="245"  Height="65"                      />
        <Button x:ConnectionId='5' x:Name="backButton" Content="Back" HorizontalAlignment="Center" Margin="63,372,52,0" VerticalAlignment="Top" Width="245" Height="65"                        />

    </Grid>
</Page>

