        <Button x:ConnectionId='3' x:Name="back" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top"                   />
        <Button x:ConnectionId='4' x:Name="button" Content="Send" HorizontalAlignment="Left" Margin="302,168,0,0" VerticalAlignment="Top"                     />
        <TextBox x:ConnectionId='5' x:Name="Question" HorizontalAlignment="Left" Margin="0,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.419,0.014" Width="302"                                   Height="168"/>

