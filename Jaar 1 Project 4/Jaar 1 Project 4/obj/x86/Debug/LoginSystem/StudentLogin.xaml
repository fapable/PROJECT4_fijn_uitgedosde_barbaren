<Page
    x:Class="Jaar_1_Project_4.StudentLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="mainHeadtitle" TargetType="TextBlock"/>
    </Page.Resources>

    <Grid x:ConnectionId='1' Background="{StaticResource hrTheme}" x:Name="student_login">
        <TextBlock x:ConnectionId='2' x:Name="studentLoginMainText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Student" VerticalAlignment="Top" Margin="140,-5,0,0" Height="36" Width="94" FontSize="24" SelectionHighlightColor="White" Foreground="White" FontWeight="Bold" Style="{StaticResource mainHeadtitle}"/>
        <TextBlock x:ConnectionId='3' x:Name="usernameLoginText" HorizontalAlignment="Left" Height="14" Margin="160,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" FontSize="11">
            <Run Text="Username
                 "/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <TextBlock x:ConnectionId='4' x:Name="passwordLoginText" HorizontalAlignment="Left" Margin="160,70,0,0" TextWrapping="Wrap" Text="Password
                   " VerticalAlignment="Top" FontSize="11"/>
        <Button x:ConnectionId='5' x:Name="studentLoginBackButton" Content="Back
                " HorizontalAlignment="Left" Margin="125,175,0,0" VerticalAlignment="Top" Width="115" Height="25"                                      FontSize="10"/>
        <TextBox x:ConnectionId='6' x:Name="UsernameTypeBox" HorizontalAlignment="Left" Margin="126,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="6" Width="114" FontSize="7"/>
        <Button x:ConnectionId='7' x:Name="logInButton" Content="Log in" HorizontalAlignment="Left" Margin="125,115,0,0" VerticalAlignment="Top"                           Width="115" Height="25" FontSize="10"/>
        <Button x:ConnectionId='8' x:Name="button" Content="Create account&#xD;&#xA;" HorizontalAlignment="Left" Margin="125,145,0,0" VerticalAlignment="Top" Height="25" Width="115" FontSize="10"                     />
        <PasswordBox x:ConnectionId='9' x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,85,0,0" Width="115"/>

    </Grid>
</Page>

