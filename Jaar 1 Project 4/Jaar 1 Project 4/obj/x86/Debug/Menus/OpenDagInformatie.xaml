        <Button x:ConnectionId='5' x:Name="locationsButton" Content="Other Wijnhaven Locations
                " HorizontalAlignment="Left" Margin="80,95,0,0" VerticalAlignment="Top" Height="30" Width="210" FontSize="15"                              />
        <Button x:ConnectionId='6' x:Name="openDayBackButton" Content="Back" HorizontalAlignment="Left" Margin="80,168,0,0" VerticalAlignment="Top"                                 Width="210" FontSize="15"/>
        <Button x:ConnectionId='7' x:Name="ContactPage" Content="Contact page" HorizontalAlignment="Left" Margin="80,130,0,0" VerticalAlignment="Top" Width="210"                            />

