<Page
    x:Class="Jaar_1_Project_4.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4.Menus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource hrTheme}">
        <TextBlock x:ConnectionId='1' x:Name="contacttitle" Margin="10,0" TextWrapping="Wrap" Text="HELP    " VerticalAlignment="Top"  FontSize="35" Foreground="White" FontWeight="Bold" Height="47" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Height="462" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340">
            <Run Text="This is the app for the open day for the Hogeschool Rotterdam. In this application you will be able to find a map of the school and the different events that will take place at the open day. "/>
            <LineBreak/>
            <Run Text="You can also find a contact page with various ways to contact the school."/>
            <LineBreak/>
            <Run/>
            <LineBreak/>
            <Run Text="Contact information is available at the contact section."/>
            <LineBreak/>
            <Run/>
            <LineBreak/>
            <Run Text="Information about the events is available by clicking on the classrooms on the map. If there is an event, there will be a pop-up."/>
            <LineBreak/>
            <Run/>
            <LineBreak/>
            <Run Text="If you find a bug, please report it to me at &quot;0927190@hr.nl&quot;."/>
        </TextBlock>
        <Button x:ConnectionId='2' x:Name="HelpPageBackButton" Content="Back" HorizontalAlignment="Center" Margin="62,519,54,59" VerticalAlignment="Center"                                  Width="244" Height="62" FontSize="15" />

    </Grid>
</Page>

