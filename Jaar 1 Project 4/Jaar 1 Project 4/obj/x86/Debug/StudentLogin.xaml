        <TextBlock x:ConnectionId='2' x:Name="usernameLoginText" HorizontalAlignment="Left" Height="14" Margin="156,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" FontSize="11">
            <Run Text="Username
                 "/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <TextBlock x:ConnectionId='3' x:Name="passwordLoginText" HorizontalAlignment="Left" Margin="162,87,0,0" TextWrapping="Wrap" Text="Password
                   " VerticalAlignment="Top" FontSize="11"/>
        <Button x:ConnectionId='4' x:Name="studentLoginBackButton" Content="Back
                " HorizontalAlignment="Left" Margin="159,168,0,0" VerticalAlignment="Top" Width="71" Height="32"                                     />
        <TextBox x:ConnectionId='5' x:Name="UsernameTypeBox" HorizontalAlignment="Left" Margin="136,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="6" Width="109" FontSize="7"/>
        <TextBox x:ConnectionId='6' x:Name="passwordTypeBox" HorizontalAlignment="Left" Margin="136,102,0,0" TextWrapping="Wrap
                 " VerticalAlignment="Top" FontSize="7" Height="13" Width="109"/>
        <Button x:ConnectionId='7' x:Name="logInButton" Content="Log in" HorizontalAlignment="Left" Margin="159,131,0,0" VerticalAlignment="Top"                           />
        <Button x:ConnectionId='8' x:Name="button" Content="Create account&#xD;&#xA;" HorizontalAlignment="Left" Margin="55,168,0,0" VerticalAlignment="Top" Height="24" Width="99" FontSize="11"                     />

    </Grid>
