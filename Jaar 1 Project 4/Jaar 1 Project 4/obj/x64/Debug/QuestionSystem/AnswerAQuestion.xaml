<Page
    x:Class="Jaar_1_Project_4.Answer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Background="{StaticResource hrTheme}" x:Name="answerquestions">
        <TextBlock x:ConnectionId='2' x:Name="mainTitle" HorizontalAlignment="Center" Margin="50,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFFFF8F8"                                               Height="67" FontSize="35" Width="293" Text="Answer Question&#xD;&#xA;"/>
        <Button x:ConnectionId='3' x:Name="sendButton" Content="Send" HorizontalAlignment="Center" Margin="201,0,0,0" VerticalAlignment="Bottom"                      Height="59" Width="159"/>
        <TextBox x:ConnectionId='4' x:Name="answerBox" HorizontalAlignment="Center" Height="366" Margin="10,200,0,0" TextWrapping="Wrap" Text="answer" VerticalAlignment="Top" Width="333"/>
        <TextBox x:ConnectionId='5' x:Name="vraagBox" HorizontalAlignment="Center" Height="128" Margin="10,67,0,0" TextWrapping="Wrap" Text="Question" VerticalAlignment="Top" Width="333" IsReadOnly="True"/>
        <Button x:ConnectionId='6' x:Name="backButton" Content="Back" HorizontalAlignment="Center" Margin="19,0,182,0" VerticalAlignment="Bottom" Height="59" Width="159"                        />

    </Grid>
</Page>

