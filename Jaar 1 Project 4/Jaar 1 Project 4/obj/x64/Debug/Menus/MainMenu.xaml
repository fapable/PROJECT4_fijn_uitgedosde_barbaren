<Page
    x:Class="Jaar_1_Project_4.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Background="{StaticResource hrTheme}" x:Name="main_menu">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2' x:Name="textBlock" Margin="85,0,85,587" TextWrapping="NoWrap" Text="Main Menu" FontWeight="Bold" FontSize="35" Grid.RowSpan="2"  TextAlignment="Center">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{ThemeResource SystemAltHighColor}"/>
            </TextBlock.Foreground>
        </TextBlock>
        <Button x:ConnectionId='3' x:Name="button" Content="Open day information" HorizontalAlignment="Center" Margin="63,141,52,434" VerticalAlignment="Center"                                 Height="65" Width="245" Grid.Row="1"/>
        <Button x:ConnectionId='4' x:Name="button1" Content="Questions" HorizontalAlignment="Stretch" Margin="63,238,52,337" VerticalAlignment="Stretch"                            Grid.Row="1"  Width="245" Height="65" />
        <Button x:ConnectionId='5' x:Name="button2" Content="Close" HorizontalAlignment="Center" Margin="63,446,52,133" VerticalAlignment="Center"                         Height="65"
                Grid.Row="1" Width="245"/>
        <Button x:ConnectionId='6' x:Name="help_button" Content="Help" HorizontalAlignment="Center" Margin="63,343,52,236" VerticalAlignment="Center"                       Height="65"
            Grid.Row="1" Width="245"/>
        

    </Grid>
</Page>

