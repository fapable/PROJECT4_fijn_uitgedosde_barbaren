<Page
    x:Class="Jaar_1_Project_4.InfoPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4.InfoQueryHandler"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource hrTheme}" x:Name="infoPopupGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="243*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Margin="138,10,153,0" TextWrapping="Wrap" Text="Info" VerticalAlignment="Top" FontSize="36" Foreground="White" FontWeight="Bold" Grid.RowSpan="2"/>
        <Button x:Name="ButtonClick" Content="Back" HorizontalAlignment="Center" Margin="99,10,100,0" VerticalAlignment="Top" Grid.Row="8" Height="44" Width="161" Click="BackButtonClick"/>

    </Grid>
</Page>
