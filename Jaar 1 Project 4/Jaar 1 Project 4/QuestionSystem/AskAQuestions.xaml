<Page
    x:Class="Jaar_1_Project_4.Questions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jaar_1_Project_4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource hrTheme}" x:Name="askquestions">
        <TextBlock x:Name="mainTitle" HorizontalAlignment="Left" Margin="130,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFFFF8F8" SelectionChanged="mainTitle_SelectionChanged" Height="32">
            <Run Text="Ask a question"/>
            <LineBreak/>
            <Run Text="                  "/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <Button x:Name="back" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Click="back_Click"/>
        <Button x:Name="button" Content="Send" HorizontalAlignment="Left" Margin="302,168,0,0" VerticalAlignment="Top" Click="send_message"/>
        <TextBox x:Name="Question" HorizontalAlignment="Left" Margin="0,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.419,0.014" Width="302" TextChanged="textBox_TextChanged" Height="168"/>

    </Grid>
</Page>
